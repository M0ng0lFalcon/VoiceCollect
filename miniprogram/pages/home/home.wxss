.list_item_name_box {
    background: #fff;
    font-size: 30rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    padding: 0 25rpx 0 50rpx;
}

.other {
    display: flex;
    height: 80rpx;
    padding: 0 25rpx 0 50rpx;
    align-items: center;
    font-size: 30rpx;
    color: #666;
}

.icon_down_rotate {
    transform: rotate(180deg);
}

/* 主页设置 */

.userinfo {
    position: relative;
    width: 750rpx;
    height: 320rpx;
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    overflow: hidden;
    display: block;
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    margin-top: 50rpx;
    border-radius: 50%;
    border: 2px solid #fff;
    box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}

.userinfo {
    /* color: #fff; */
    font-size: 14px;
    background-color: rgb(149, 236, 105);
    border-radius: 40%;
}

.submitTitle {
    margin-top: 50rpx;
    text-align: center;
    font-size: 50rpx;
}