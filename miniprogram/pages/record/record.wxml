<view class="recordValue">
    <textarea style="border:0;border-radius:5px;background-color:rgba(241,241,241,.98);width: 355px;height: 100px;padding: 10px;resize: none;" disabled  value="{{recordValue}}">
    </textarea>
</view>

<mp-cells ext-class="my-cells" wx:for="{{voices}}">
    <mp-slideview buttons="{{slideButtons}}" bindbuttontap="slideBtnTap" data-key="{{item.filePath}}">
        <mp-cell value="{{item.id}} 号录音" footer="{{item.size}}kb" bindtap="gotoPlay" data-key="{{item.filePath}}">
        </mp-cell>
    </mp-slideview>
</mp-cells>

<button id="recordBtn" class="{{record_class}}" bindtouchstart="touchDown"
    bindtouchend="touchUp">{{record_text}}</button>