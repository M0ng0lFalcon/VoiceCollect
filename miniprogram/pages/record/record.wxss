/* miniprogram/pages/index/index.wxss */
#recordBtn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
}

/* pages/index/release/release.wxss */
.microphone {
    position: fixed;
    left: 250rpx;
    bottom: 0;
    height: 240rpx;
    width: 240rpx;
    border-radius: 20rpx;
    margin: 50% auto;
    background: #26A5FF;
}


.board {
    overflow: hidden;
    border-bottom: 2rpx solid #26A5FF;
}

/*列布局*/
.cell {
    display: flex;
    margin: 20rpx;
}

.cell-hd {
    margin-left: 10rpx;
    color: #885A38;
}

.cell .cell-bd {
    flex: 1;
    position: relative;

}

/**只显示一行*/
.date {
    font-size: 30rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}