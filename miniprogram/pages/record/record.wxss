/* miniprogram/pages/index/index.wxss */
#recordBtn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 120rpx;
}

.recordRes {
    position: relative;
    align-content: center;
    width: 100%;
    height: 120rpx;
    font-size: 60rpx;
}

.recordValue {
    writing-mode: vertical-lr;
    text-orientation: sideways-right;
    -webkit-text-orientation: sideways-right;
    margin: 0 auto;
    margin-top: 50rpx;
    display: flex;
    align-items: center;
    word-wrap: break-word;
    word-break: break-all;
    width: 100%;
    font-size: 80rpx;

}
